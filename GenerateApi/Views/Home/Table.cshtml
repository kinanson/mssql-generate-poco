@{
    ViewBag.Title = "Table";
}

<div ng-controller="tableController as vm">
    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <tr>
                    <th><input class="form-control" type="search" ng-model="vm.search" /></th>
                </tr>
                <tr>
                    <th>
                        <div class="btn-group" role="group" aria-label="...">
                            <button type="button" class="btn btn-default" ng-click="vm.generateDto()">產生table的DTO</button>
                            <button type="button" class="btn btn-default" ng-click="vm.generateInsert()">產生SP的INSERT語法</button>
                            <button type="button" class="btn btn-default" ng-click="vm.generateUpdate()">產生SP的UPDATE語法</button>
                        </div>
                    </th>
                </tr>
                <tr>
                    <th>請任選一筆</th>
                </tr>
                <tr ng-repeat="item in vm.data | filter:vm.search">
                    <td><a href="#" ng-click="vm.table=item">{{item}}</a></td>
                </tr>
            </table>
        </div>
    </div>

</div>

@section scripts{
    <script src="~/app/table.controller.js"></script>
<script src="~/app/modal/tableModal.controller.js"></script>
}